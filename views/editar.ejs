<%- include('partials/head.ejs') %>
<%- include('partials/header.ejs') %>

<img class="ico" src="/assets/ico.png" alt="">
<div class="cards">
        <h4>Editar movimiento</h4>
        <form action="/editar/<%= movimientoId %>" method="POST">
            <p><%= movimiento.date %></p>
            <input type="text" name="description" id="description" value="<%= movimiento.description %>" />
            <input type="number" name="number" id="number" value="<%= movimiento.number %>" />
            <input type="submit" value="GUARDAR">
            <% if (error) { %>
                <p style="color: gray;"><%= error %></p>
            <% } %>
        </form>
</div>

<%- include('partials/footer.ejs') %>